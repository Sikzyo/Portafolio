---
// Estilos
import "../styles/global.css";

// Componentes
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// Transiciones
import { ClientRouter } from "astro:transitions";

// Analytics
import Analytics from "@vercel/analytics/astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Sikzyo</title>
    <meta
      name="description"
      content="Portafolio de Jair Ochoa, diseÃ±ador Interactivo."
    />
    <meta name="theme-color" content="#FFFCF8" />
    <ClientRouter />
    <Analytics />
    <script>
      document.documentElement.classList.toggle(
        "dark",
        localStorage.theme === "dark"
      );
    </script>
  </head>
  <body
    class="flex flex-col p-6 bg-linear-to-b from-white-bg-1 from-50% to-white-bg-2 dark:from-dark-bg-1 dark:to-dark-bg-2 bg-fixed gap-8 font-sora items-center dark:text-white md:p-8 md:gap-10"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100dvh;
    overscroll-behavior: none;
  }
</style>
